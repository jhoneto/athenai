<h1>LLMs - <%= @workspace.name %></h1>

<%= link_to 'New LLM', new_workspace_llm_path(@workspace), class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Provider</th>
      <th>Model</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @llms.each do |llm| %>
      <tr>
        <td><%= llm.name %></td>
        <td><%= llm.provider %></td>
        <td><%= llm.model %></td>
        <td>
          <%= link_to 'Show', [@workspace, llm], class: 'btn btn-info' %>
          <%= link_to 'Edit', edit_workspace_llm_path(@workspace, llm), class: 'btn btn-warning' %>
          <%= link_to 'Delete', [@workspace, llm], method: :delete, 
                      confirm: 'Are you sure?', class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back to Workspace', @workspace, class: 'btn btn-secondary' %>