<h1>New LLM - <%= @workspace.name %></h1>

<%= form_with model: [@workspace, @llm], local: true do |form| %>
  <% if @llm.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@llm.errors.count, "error") %> prohibited this LLM from being saved:</h4>
      <ul>
        <% @llm.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :provider %>
    <%= form.select :provider, options_for_select([
      ['GPT', 'gpt'],
      ['Claude', 'claude'],
      ['Gemini', 'gemini'],
      ['Other', 'other']
    ]), { prompt: 'Select provider' }, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.label :model %>
    <%= form.text_field :model, class: 'form-control', placeholder: 'e.g., gpt-4, claude-3-sonnet' %>
  </div>

  <div class="form-group">
    <%= form.label :configs, 'Configurations (JSON)' %>
    <%= form.text_area :configs, rows: 5, class: 'form-control', placeholder: '{"api_key": "...", "temperature": 0.7}' %>
  </div>

  <div class="actions">
    <%= form.submit 'Create LLM', class: 'btn btn-success' %>
    <%= link_to 'Back', workspace_llms_path(@workspace), class: 'btn btn-secondary' %>
  </div>
<% end %>