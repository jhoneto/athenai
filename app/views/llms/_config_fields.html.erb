<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
  <div>
    <%= form.label :api_key, 'API Key', class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.password_field :api_key, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500', 
                            placeholder: 'Sua chave API do provider' %>
  </div>
  <div>
    <%= form.label :api_url, 'API URL (Opcional)', class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.url_field :api_url, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500', 
                       placeholder: 'URL customizada da API' %>
  </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-6">
  <div>
    <%= form.label :temperature, 'Temperature (0.0-2.0)', class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.number_field :temperature, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500', 
                          step: 0.1, min: 0.0, max: 2.0,
                          placeholder: '0.7' %>
  </div>
  <div>
    <%= form.label :max_tokens, 'Max Tokens', class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.number_field :max_tokens, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500', 
                          min: 1, placeholder: '2000' %>
  </div>
  <div>
    <%= form.label :timeout, 'Timeout (segundos)', class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.number_field :timeout, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500', 
                          min: 1, placeholder: '30' %>
  </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-6">
  <div>
    <%= form.label :top_p, 'Top P (0.0-1.0)', class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.number_field :top_p, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500', 
                          step: 0.01, min: 0.0, max: 1.0,
                          placeholder: '0.9' %>
  </div>
  <div>
    <%= form.label :top_k, 'Top K', class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.number_field :top_k, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500', 
                          min: 1, placeholder: '40' %>
  </div>
  <div>
    <%= form.label :stop_sequences, 'Stop Sequences', class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :stop_sequences, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500', 
                        placeholder: 'Valores separados por vÃ­rgula' %>
  </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
  <div>
    <%= form.label :frequency_penalty, 'Frequency Penalty (-2.0 to 2.0)', class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.number_field :frequency_penalty, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500', 
                          step: 0.1, min: -2.0, max: 2.0,
                          placeholder: '0.0' %>
  </div>
  <div>
    <%= form.label :presence_penalty, 'Presence Penalty (-2.0 to 2.0)', class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.number_field :presence_penalty, class: 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500', 
                          step: 0.1, min: -2.0, max: 2.0,
                          placeholder: '0.0' %>
  </div>
</div>