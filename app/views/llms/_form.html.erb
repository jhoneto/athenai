<%= form_with model: model, local: true do |form| %>
  <% if model.last.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(model.last.errors.count, "error") %> prohibited this LLM from being saved:</h4>
      <ul>
        <% model.last.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :provider %>
    <%= form.select :provider, options_for_select([
      ['GPT', 'gpt'],
      ['Claude', 'claude'],
      ['Gemini', 'gemini'],
      ['Other', 'other']
    ], selected_provider), { prompt: 'Select provider' }, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.label :model %>
    <%= form.text_field :model, class: 'form-control', placeholder: 'e.g., gpt-4, claude-3-sonnet' %>
  </div>

  <div class="form-group">
    <%= form.label :configs, 'Configurations (JSON)' %>
    <%= form.text_area :configs, rows: 5, class: 'form-control', 
                       value: configs_value, 
                       placeholder: '{"api_key": "...", "temperature": 0.7}' %>
  </div>

  <div class="actions">
    <%= form.submit submit_text, class: 'btn btn-success' %>
    <%= link_to 'Back', back_path, class: 'btn btn-secondary' %>
  </div>
<% end %>