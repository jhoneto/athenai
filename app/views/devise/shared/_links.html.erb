<div class="text-center space-y-2">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Entrar", new_session_path(resource_name), class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div>
      <span class="text-gray-500 text-sm">Não tem uma conta?</span>
      <%= link_to "Criar conta", new_registration_path(resource_name), class: "text-blue-600 hover:text-blue-800 text-sm font-medium ml-1" %>
    </div>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div>
      <%= link_to "Esqueci minha senha", new_password_path(resource_name), class: "text-blue-600 hover:text-blue-800 text-sm" %>
    </div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div>
      <%= link_to "Não recebeu as instruções de confirmação?", new_confirmation_path(resource_name), class: "text-blue-600 hover:text-blue-800 text-sm" %>
    </div>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div>
      <%= link_to "Não recebeu as instruções de desbloqueio?", new_unlock_path(resource_name), class: "text-blue-600 hover:text-blue-800 text-sm" %>
    </div>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <div>
        <%= button_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), 
            data: { turbo: false }, 
            class: "w-full bg-gray-200 text-gray-800 py-2 px-4 rounded-md hover:bg-gray-300 transition-colors" %>
      </div>
    <% end %>
  <% end %>
</div>
