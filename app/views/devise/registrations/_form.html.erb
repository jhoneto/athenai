<%= form_for(resource, as: resource_name, url: url, html: { method: method, class: "space-y-6" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <%= f.label :name, "Nome", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name",
        class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500",
        placeholder: "Digite seu nome completo" %>
  </div>

  <div>
    <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.email_field :email, autocomplete: "email",
        class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500",
        placeholder: "Digite seu email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-md p-3">
      <p class="text-sm text-yellow-800">Aguardando confirmação para: <%= resource.unconfirmed_email %></p>
    </div>
  <% end %>

  <div>
    <%= f.label :password, "Senha", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <% if show_password_hint && @minimum_password_length %>
      <p class="text-xs text-gray-500 mb-2">Mínimo de <%= @minimum_password_length %> caracteres</p>
    <% elsif !show_password_hint %>
      <p class="text-xs text-gray-500 mb-2">Deixe em branco se não quiser alterar</p>
    <% end %>
    <%= f.password_field :password, autocomplete: password_autocomplete,
        class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500",
        placeholder: "Digite sua senha" %>
  </div>

  <div>
    <%= f.label :password_confirmation, "Confirmação da senha", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.password_field :password_confirmation, autocomplete: password_autocomplete,
        class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500",
        placeholder: "Confirme sua senha" %>
  </div>

  <% if show_current_password %>
    <div>
      <%= f.label :current_password, "Senha atual", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <p class="text-xs text-gray-500 mb-2">Precisamos da sua senha atual para confirmar as alterações</p>
      <%= f.password_field :current_password, autocomplete: "current-password",
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500",
          placeholder: "Digite sua senha atual" %>
    </div>
  <% end %>

  <div>
    <%= f.submit submit_text, class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" %>
  </div>
<% end %>