<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
  <div>
    <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", 
        class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500",
        placeholder: "Digite seu email" %>
  </div>

  <div>
    <%= f.label :password, "Senha", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.password_field :password, autocomplete: "current-password",
        class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500",
        placeholder: "Digite sua senha" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="flex items-center">
      <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
      <%= f.label :remember_me, "Lembrar de mim", class: "ml-2 block text-sm text-gray-700" %>
    </div>
  <% end %>

  <div>
    <%= f.submit "Entrar", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" %>
  </div>
<% end %>

<div class="mt-6">
  <%= render "devise/shared/links" %>
</div>
