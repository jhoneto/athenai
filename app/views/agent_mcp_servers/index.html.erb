<div class="bg-white rounded-lg shadow">
  <div class="px-6 py-4 border-b border-gray-200">
    <h1 class="text-2xl font-bold text-gray-900">Gerenciar Servidores MCP - <%= @agent.name %></h1>
  </div>
  
  <div class="p-6">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Servidores MCP Associados</h3>
        <% if @agent_mcp_servers.any? %>
          <div class="overflow-hidden border border-gray-200 rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Nome do Servidor
                  </th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    URL
                  </th>
                  <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Ações
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @agent_mcp_servers.each do |agent_mcp_server| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="flex items-center">
                        <div>
                          <div class="text-sm font-medium text-gray-900"><%= agent_mcp_server.mcp_server.name %></div>
                          <% if agent_mcp_server.mcp_server.description.present? %>
                            <div class="text-xs text-gray-500"><%= truncate(agent_mcp_server.mcp_server.description, length: 50) %></div>
                          <% end %>
                        </div>
                        <div class="ml-3">
                          <% if agent_mcp_server.mcp_server.enabled? %>
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                              Ativo
                            </span>
                          <% else %>
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                              Inativo
                            </span>
                          <% end %>
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-xs text-gray-600 font-mono bg-gray-100 px-2 py-1 rounded">
                        <%= truncate(agent_mcp_server.mcp_server.url, length: 30) %>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                      <%= link_to workspace_agent_agent_mcp_server_path(@workspace, @agent, agent_mcp_server), 
                                  method: :delete, confirm: 'Tem certeza?', class: "text-red-600 hover:text-red-900" do %>
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-8 bg-gray-50 rounded-lg border border-gray-200">
            <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h6a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h6a2 2 0 002-2v-4a2 2 0 00-2-2m8-8a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V4z"></path>
            </svg>
            <p class="text-gray-500">Nenhum servidor MCP associado a este agente ainda.</p>
          </div>
        <% end %>
      </div>
      
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Adicionar Servidor MCP</h3>
        <% if @available_mcp_servers.any? %>
          <div class="space-y-3">
            <% @available_mcp_servers.each do |mcp_server| %>
              <div class="p-4 bg-gray-50 rounded-lg border border-gray-200 hover:bg-gray-100 transition-colors">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h4 class="text-sm font-medium text-gray-900 mb-2"><%= mcp_server.name %></h4>
                    <% if mcp_server.description.present? %>
                      <p class="text-xs text-gray-500 mb-2"><%= truncate(mcp_server.description, length: 100) %></p>
                    <% end %>
                    <p class="text-xs text-gray-600 font-mono bg-white px-2 py-1 rounded mb-2 inline-block">
                      <%= truncate(mcp_server.url, length: 50) %>
                    </p>
                    <% if mcp_server.headers_hash.present? %>
                      <div class="mb-3">
                        <span class="text-xs text-gray-500">Headers configurados:</span>
                        <div class="flex flex-wrap gap-1 mt-1">
                          <% mcp_server.headers_hash.keys.first(3).each do |header| %>
                            <span class="inline-flex px-2 py-1 text-xs font-mono bg-blue-100 text-blue-800 rounded">
                              <%= header %>
                            </span>
                          <% end %>
                          <% if mcp_server.headers_hash.keys.size > 3 %>
                            <span class="text-xs text-gray-500">+<%= mcp_server.headers_hash.keys.size - 3 %> mais</span>
                          <% end %>
                        </div>
                      </div>
                    <% end %>
                    <div class="flex items-center space-x-2">
                      <% if mcp_server.enabled? %>
                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                          Ativo
                        </span>
                      <% else %>
                        <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                          Inativo
                        </span>
                      <% end %>
                    </div>
                  </div>
                  <div class="ml-4">
                    <%= form_with model: [@workspace, @agent, AgentMcpServer.new], local: true, class: "inline" do |form| %>
                      <%= form.hidden_field :mcp_server_id, value: mcp_server.id %>
                      <%= form.submit "Associar", class: "bg-green-600 text-white px-3 py-1 text-sm rounded hover:bg-green-700 transition-colors" %>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8 bg-gray-50 rounded-lg border border-gray-200">
            <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p class="text-gray-500 mb-4">Todos os servidores MCP disponíveis já estão associados a este agente.</p>
            <%= link_to new_workspace_mcp_server_path(@workspace), 
                        class: 'bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors' do %>
              Criar Novo Servidor MCP
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex justify-between">
    <%= link_to [@workspace, @agent], class: 'text-blue-600 hover:text-blue-900 font-medium' do %>
      ← Voltar ao Agente
    <% end %>
    <%= link_to workspace_agents_path(@workspace), class: 'text-gray-600 hover:text-gray-900 font-medium' do %>
      ← Voltar aos Agentes
    <% end %>
  </div>
</div>