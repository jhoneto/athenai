<h1>Agents - <%= @workspace.name %></h1>

<%= link_to 'New Agent', new_workspace_agent_path(@workspace), class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>LLM</th>
      <th>Prompt Preview</th>
      <th>Functions</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @agents.each do |agent| %>
      <tr>
        <td><%= agent.name %></td>
        <td><%= agent.llm.name %></td>
        <td><%= truncate(agent.prompt, length: 50) %></td>
        <td><%= agent.functions.count %></td>
        <td>
          <%= link_to 'Show', [@workspace, agent], class: 'btn btn-info' %>
          <%= link_to 'Edit', edit_workspace_agent_path(@workspace, agent), class: 'btn btn-warning' %>
          <%= link_to 'Functions', workspace_agent_agent_functions_path(@workspace, agent), class: 'btn btn-secondary' %>
          <%= link_to 'Delete', [@workspace, agent], method: :delete, 
                      confirm: 'Are you sure?', class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back to Workspace', @workspace, class: 'btn btn-secondary' %>