<h1>New Agent - <%= @workspace.name %></h1>

<%= form_with model: [@workspace, @agent], local: true do |form| %>
  <% if @agent.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@agent.errors.count, "error") %> prohibited this agent from being saved:</h4>
      <ul>
        <% @agent.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :llm_id, 'LLM' %>
    <%= form.select :llm_id, options_from_collection_for_select(@llms, :id, :name), 
                    { prompt: 'Select an LLM' }, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.label :prompt %>
    <%= form.text_area :prompt, rows: 5, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Agent', class: 'btn btn-success' %>
    <%= link_to 'Back', workspace_agents_path(@workspace), class: 'btn btn-secondary' %>
  </div>
<% end %>