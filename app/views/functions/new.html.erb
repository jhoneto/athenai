<h1>New Function - <%= @workspace.name %></h1>

<%= form_with model: [@workspace, @function], local: true do |form| %>
  <% if @function.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@function.errors.count, "error") %> prohibited this function from being saved:</h4>
      <ul>
        <% @function.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :code %>
    <%= form.text_area :code, rows: 10, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Function', class: 'btn btn-success' %>
    <%= link_to 'Back', workspace_functions_path(@workspace), class: 'btn btn-secondary' %>
  </div>
<% end %>