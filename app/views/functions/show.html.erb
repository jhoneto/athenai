<div class="bg-white rounded-lg shadow">
  <div class="px-6 py-4 border-b border-gray-200">
    <div class="flex items-center justify-between">
      <h1 class="text-2xl font-bold text-gray-900"><%= @function.name %></h1>
      <div class="flex space-x-2">
        <%= link_to edit_workspace_function_path(@workspace, @function), class: "bg-yellow-600 text-white px-4 py-2 rounded-md hover:bg-yellow-700 transition-colors" do %>
          Editar
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
      <div class="bg-gray-50 p-4 rounded-lg">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Informações</h3>
        <dl class="space-y-2">
          <div>
            <dt class="text-sm font-medium text-gray-500">Nome</dt>
            <dd class="text-sm text-gray-900"><%= @function.name %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Workspace</dt>
            <dd class="text-sm text-gray-900"><%= @workspace.name %></dd>
          </div>
        </dl>
      </div>
      
      <div class="bg-gray-50 p-4 rounded-lg">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Agentes Utilizando</h3>
        <% if @function.agents.any? %>
          <div class="space-y-2">
            <% @function.agents.each do |agent| %>
              <div class="flex items-center justify-between p-2 bg-white rounded border">
                <span class="text-sm text-gray-900"><%= agent.name %></span>
                <%= link_to [@workspace, agent], class: "text-blue-600 hover:text-blue-800 text-sm" do %>
                  Ver →
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-sm text-gray-500">Nenhum agente está usando esta função ainda.</p>
        <% end %>
      </div>
    </div>
    
    <div class="bg-gray-50 p-4 rounded-lg">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Código</h3>
      <pre class="bg-gray-800 text-green-400 p-4 rounded-lg text-sm overflow-x-auto"><code><%= @function.code %></code></pre>
    </div>
    
    <div class="flex space-x-3 mt-6 pt-6 border-t">
      <%= link_to workspace_functions_path(@workspace), class: "bg-gray-300 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-400 transition-colors" do %>
        ← Voltar para Funções
      <% end %>
      <%= link_to @workspace, class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors" do %>
        Voltar ao Workspace
      <% end %>
    </div>
  </div>
</div>